{
    "manifest_version": 2,
    "name": "Chrome Tab Auto Reloader",
    "short_name": "Tab Reloader",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": [
                "https://*/"
            ],
            "js": [
                "external/js/jquery-3.1.1.min.js"
            ] 
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}