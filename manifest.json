{
    "manifest_version": 2,
    "name": "Chrome Tab Auto Reloader",
    "short_name": "Tab Reloader",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": [
                "https://*/"
            ],
            "js": [
                "external/js/jquery-3.1.1.min.js"
            ] 
        }
    ],
    "background": {
        "scripts": [
            "background.js",
            "CONSTANTS.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "autorespawn.png",
        "default_popup": "popup.html"
    }
}